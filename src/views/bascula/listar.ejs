<%- include('../partials/head') %>

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>B치scula de <%= paciente.nombre %> <%= paciente.apellidos %></h1>
            <p class="text-muted">Gesti칩n de peso y altura</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="/" class="btn btn-secondary">Volver</a>
            <a href="/bascula/<%= paciente.id %>/agregar" class="btn btn-primary">Agregar Registro</a>
        </div>
    </div>

    <% if (registros && registros.length > 0) { %>
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Peso Actual</h5>
                        <p class="card-text h3"><%= registros[0].peso %> kg</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Altura</h5>
                        <p class="card-text h3"><%= registros[0].altura %> m</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">IMC</h5>
                        <p class="card-text h3"><%= imcActual %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Registros</h5>
                        <p class="card-text h3"><%= registros.length %></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Clasificaci칩n IMC</h5>
            </div>
            <div class="card-body">
                <p><%= descripcionIMC %></p>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Peso (kg)</th>
                        <th>Altura (m)</th>
                        <th>IMC</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% registros.forEach(function(registro) { %>
                        <tr>
                            <td><%= new Date(registro.fecha).toLocaleDateString('es-ES') %></td>
                            <td><%= registro.peso %></td>
                            <td><%= registro.altura %></td>
                            <td>
                                <span class="badge bg-<%= 
                                    registro.imc < 18.5 ? 'warning' : 
                                    registro.imc < 25 ? 'success' : 
                                    registro.imc < 30 ? 'danger' : 
                                    'dark' 
                                %>"><%= registro.imc %></span>
                            </td>
                            <td>
                                <form action="/bascula/<%= paciente.id %>/<%= registro.id %>?_method=DELETE" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-info" role="alert">
            No hay registros de b치scula. <a href="/bascula/<%= paciente.id %>/agregar" class="alert-link">Agregar uno ahora</a>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
