<%- include('partials/head') %>

<div class="container mt-5">
    <% if (paciente) { %>

        <h1 class="mb-4">Detalles del Paciente</h1>
        <div class="card p-4">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Id:</strong> <%= paciente.id %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Nombre:</strong> <%= paciente.nombre %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Apellidos:</strong> <%= paciente.apellidos %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Fecha Nacimiento:</strong> <%= new Date(paciente.fechaDeNacimiento).toLocaleDateString('es-Es') %></p>
                </div>
            </div>
        </div>
        <% } %>

        <div class="mt-4">
            <a href="/" class="btn btn-secondary">Volver a la lista de pacientes</a>
        </div>
</div>

<%- include('partials/footer') %>