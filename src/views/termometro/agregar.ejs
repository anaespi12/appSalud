<%- include('../partials/head') %>

<div class="container mt-5">
    <h1 class="mb-4">Agregar Registro de Termómetro</h1>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">Paciente: <%= paciente.nombre %> <%= paciente.apellidos %></h5>
                    
                    <form action="/termometro/<%= paciente.id %>" method="POST">
                        <div class="mb-3">
                            <label for="temperatura" class="form-label">Temperatura (°C):</label>
                            <input type="number" step="0.1" class="form-control" id="temperatura" name="temperatura" min="35" max="42" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="fecha" class="form-label">Fecha:</label>
                            <input type="date" class="form-control" id="fecha" name="fecha" required>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Guardar Registro</button>
                        <a href="/termometro/<%= paciente.id %>" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">Escala de Temperatura</h5>
                    <ul class="list-unstyled">
                        <li><small><span class="badge bg-info">Baja</span> < 36.5°C</small></li>
                        <li><small><span class="badge bg-success">Normal</span> 36.5 - 37.5°C</small></li>
                        <li><small><span class="badge bg-warning">Fiebre Leve</span> 37.5 - 38.5°C</small></li>
                        <li><small><span class="badge bg-danger">Fiebre Alta</span> > 38.5°C</small></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <a href="/termometro/<%= paciente.id %>" class="btn btn-secondary">Volver a Termómetro</a>
    </div>
</div>

<%- include('../partials/footer') %>
